.col-xs-12.col-sm-10.col-md-8.col-lg-7.no-float.center-block
	%article.card.large-padding
		%header
			%h1.gray.bold= @product.name
		%section
			.col-xs-12.col-md-5.no-padding.inline-block
				=image_tag @product.avatar.url
			.col-md-1.inline-block.hidden-xs
			.col-xs-12.col-md-6.inline-block.text-left
				%h3.blue.bold.normal= @product.user.email
				%h3.green.bold.normal
					Precio: 
					%span.gray= "$USD #{@product.pricing}"
				%h3.green.bold.normal
					Archivos: 
					%span.gray 20
				%h3.green.bold.normal
					Tama√±o: 
					%span.gray= "1MB"
				=render "in_shopping_carts/form",product:@product
		%section
			%h3.green.bold.normal
				Desripcion:
			%p.gray= @product.description