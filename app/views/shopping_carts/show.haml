.card.long-padding.col-xs-11
	%table.table.table-striped.table-hover.medium#table_shopping_cart
		%thead
			%td Producto
			%td Costo
			%td Acciones
		%tbody
			-@shopping_cart.in_shopping_carts.each do |i_sh|
				- product = i_sh.product
				%tr{id: "#{product.id}"}
					%td= product.name
					%td= "$USD #{product.pricing}"
					%td.red Eliminar
	.top-space.long-padding.text-center#payment_form
		%p.medium
			%strong
				Total: $USD
				= @shopping_cart.total
	.top-space
		=render "payments/buttons"